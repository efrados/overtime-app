<tr>
  <th scope="row"><%= post.id %></th>
  <td><%= post.date %></td>
  <td><%= post.user.full_name %></td>
  <td><%= truncate(post.rationale) %></td>
  <td>
    <%= link_to 'Edit', edit_post_path(post),id: "edit_#{post.id}" %>
    <%= link_to 'Destroy', post_path(post), method: :delete, id: "destroy_#{post.id}_from_index", data: {confirm: "Are you sure?"} %>
  </td>
</tr>
